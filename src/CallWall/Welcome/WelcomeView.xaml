<UserControl x:Class="CallWall.Welcome.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit" 
             Width="800" Height="400">

    <!--TODO: Localise the text-->
    <layoutToolkit:Accordion 
                   ExpandDirection="Right"
                   VerticalAlignment="Stretch" 
                   VerticalContentAlignment="Stretch"
                   HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
                   BorderThickness="0"
                   SelectionSequence="Simultaneous"
                   SelectionMode="One">
        <layoutToolkit:AccordionItem Header="Step 1" IsSelected="False" Foreground="White" Background="#804080" BorderThickness="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#804080">
                <TextBlock>Welcome to CallWall</TextBlock>
                <TextBlock>First we need to set up how you want to pair your Phone to your PC</TextBlock>
                <TextBlock>Then we need to set up where you want to source your data from</TextBlock>
                <ToggleButton>Next</ToggleButton>
            </StackPanel>
        </layoutToolkit:AccordionItem>
        <layoutToolkit:AccordionItem Header="Step 2" Background="#802080" BorderThickness="0">

            <Grid Background="#802080" VerticalAlignment="Stretch">
                <TextBlock>Connection Settings</TextBlock>
            </Grid>
        </layoutToolkit:AccordionItem>
        <layoutToolkit:AccordionItem Header="Step 3" Background="#800080" BorderThickness="0">
            <Grid Background="#800080">
                <TextBlock>Providers Settings</TextBlock>
            </Grid>
        </layoutToolkit:AccordionItem>
    </layoutToolkit:Accordion>
</UserControl>
