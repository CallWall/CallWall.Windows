<Window x:Class="CallWall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
        xmlns:CallWall="clr-namespace:CallWall;assembly=CallWall.Core" Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#F5303030">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource PageHeaderStyle}" Margin="120,80">
            Call Wall
        </TextBlock>
        <ContentControl cal:RegionManager.RegionName="{x:Static CallWall:RegionNames.Modal}"
                        KeyboardNavigation.IsTabStop="False"/>
    </Grid>
</Window>
