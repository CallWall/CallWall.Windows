<Application x:Class="CallWall.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:CallWall="clr-namespace:CallWall;assembly=CallWall.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    <CallWall:BooleanToInvisibilityConverter x:Key="BooleanToInvisibilityConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/Styles/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/Styles/Text.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/Styles/Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/Styles/TabControl.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/Styles/Window.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/Styles/WpfToolkit.xaml"/>

                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/ProfileDashboard/Contact/ContactProfileDataTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/ProfileDashboard/Communication/MessageDataTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/ProfileDashboard/Pictures/AlbumDataTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CallWall.Shell;component/ProfileDashboard/Calendar/CalendarEventDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
