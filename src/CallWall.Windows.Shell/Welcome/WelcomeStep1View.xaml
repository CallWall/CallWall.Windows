<UserControl x:Class="CallWall.Windows.Shell.Welcome.WelcomeStep1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel FocusManager.FocusedElement="{Binding ElementName=NextButton}">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Style="{DynamicResource PageHeaderStyle}">Welcome to CallWall</TextBlock>
            <TextBlock>First we need to set up how you want to pair your Phone to your PC.</TextBlock>
            <TextBlock>Then we need to set up where you want to source your data from</TextBlock>
        </StackPanel>
        <Button x:Name="NextButton" Command="{Binding NextStepCommand}" IsDefault="True">Next</Button>
    </DockPanel>
</UserControl>
